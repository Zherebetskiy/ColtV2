<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Colt.UI.Desktop.ViewModels.Products"
             x:Class="Colt.UI.Desktop.Views.AddProductPage"
             Title="Додати продукт">

    <ContentPage.BindingContext>
        <vm:AddProductViewModel/>
    </ContentPage.BindingContext>

    <StackLayout Padding="20" Spacing="10">
        <Entry Placeholder="Назва продукту" Text="{Binding Name}" />
        <Entry Placeholder="Опис" Text="{Binding Description}" />

        <Button Text="Додати" Command="{Binding AddProductCommand}" />
    </StackLayout>
</ContentPage>